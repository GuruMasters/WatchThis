            display: 'flex',
            gap: 'clamp(4px, 1vw, 8px)',
            padding: 'clamp(12px, 3vw, 16px) clamp(16px, 4vw, 24px)',
            borderTop: '1px solid rgba(255,255,255,0.1)',
            background: 'rgba(0,0,0,0.3)',
            flexWrap: 'wrap',
            overflowX: 'auto'

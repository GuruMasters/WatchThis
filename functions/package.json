    "@nestjs/swagger": "^7.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "helmet": "^7.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/minimatch": "^5.1.2",
    "typescript": "^5.0.0"
  },

# ==========================================
# WatchThis Frontend - Production Dockerfile
# ==========================================

# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package.json yarn.lock ./

# Install dependencies
RUN yarn install --frozen-lockfile

# Copy source code
COPY . .

# Build the application
RUN yarn nx build consultation-frontend --configuration=production

# Stage 2: Production
FROM nginx:alpine

# Copy built files
COPY --from=builder /app/dist/consultation-frontend /usr/share/nginx/html

# Copy nginx configuration
COPY consultation-frontend/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --quiet --tries=1 --spider http://localhost/ || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"]

